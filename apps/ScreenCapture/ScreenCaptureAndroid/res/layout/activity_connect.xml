<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenViewerActivity" 
        android:orientation="vertical"> 

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="@string/lb_server_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/input_address"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="@string/lb_server_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            />

        <EditText android:id="@+id/input_port"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    
    <Button android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_connect"
        />
    <Button android:id="@+id/btn_getscreenshot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_get_screenshot"
        />
    
    <ImageView 
        android:id="@+id/img_screenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>