<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#3e3e3e">
    
	<TextView
			android:id="@+id/dialog_caption"
        	android:layout_margin="15dp"
        	android:gravity="center_horizontal"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:textColor="#ffffff"
        	android:textSize="18sp"
        	android:text="您还没有登录哦！"/>
		<View
		    android:layout_width="wrap_content"  
        	android:layout_height="2dip"
        	android:layout_marginLeft="45dp"
        	android:layout_marginRight="45dp"  
        	android:background="#333333" /> 
		<TextView
			android:id="@+id/dialog_message"
        	android:layout_marginTop="16dp"
        	android:layout_marginLeft="36dp"
        	android:layout_marginRight="36dp"
        	android:lineSpacingExtra="5dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#999999"
        	android:textSize="@dimen/coupon_collect_textsize"
        	android:text="@string/slot_login_info"/>

	<!-- Button options -->
	<LinearLayout android:id="@+id/dialog_btn_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_margin="20dp">
	    
	    <TextView android:id="@+id/dialog_btn_positive"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_marginRight="1dp"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:textStyle="bold"
	        android:textColor="#ffffff"
	        android:background="@drawable/slot_ok_btn_state"
	        android:text="再试一次"/>
	    
	    <TextView android:layout_width="10dp" 
		    android:layout_height="fill_parent"
		    />
	     
	    <TextView android:id="@+id/dialog_btn_negative"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_marginLeft="1dp"
	        android:textSize="@dimen/coupon_collect_textsize"
	        android:gravity="center"
	        android:textColor="#444444"
	        android:background="@drawable/slot_cancel_btn_state"
	        android:text="残忍的离开"/>
		</LinearLayout>
</LinearLayout>