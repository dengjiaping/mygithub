<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:icson="http://schemas.android.com/apk/res/com.icson"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.icson.lib.ui.NavigationBar
        android:id="@+id/login_ali_navigation_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        icson:text="@string/login_ali" />

    <WebView
        android:id="@+id/global_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/login_ali_navigation_bar" />

    <include
        android:layout_below="@id/login_ali_navigation_bar"
        layout="@layout/global_loading" />

</RelativeLayout>