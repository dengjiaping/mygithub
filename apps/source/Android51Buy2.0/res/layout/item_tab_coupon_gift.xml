<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="2dp"
    android:paddingTop="3dp" >

    <LinearLayout
        android:layout_width="74dp"
        android:layout_height="70dp"
        android:background="@drawable/coupon_gift_bg_small"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_detail_coupon_gift_pic_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rmb"
                android:textColor="@color/white"
                android:textSize="@dimen/front_size_30xp" />

            <TextView
                android:id="@+id/item_detail_coupon_gift_pic_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp" 
                android:text="@string/num_fifty"
                android:textColor="@color/white"
                android:textSize="@dimen/front_size_48xp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/orderconfirm_coupon_title"
            android:textColor="@color/white"
            android:textSize="@dimen/front_size_32xp" />
    </LinearLayout>

</LinearLayout>