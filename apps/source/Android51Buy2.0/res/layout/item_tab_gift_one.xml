<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_detail_gift_one"
    android:layout_width="wrap_content"
    android:layout_height="80dp" >

    <ImageView
        android:id="@+id/item_detail_gift_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitCenter" 
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/item_detail_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_detail_gift_image"
        android:layout_marginLeft="2dp"
        android:paddingTop="@dimen/margin_size_10xp"
        android:textSize="@dimen/front_size_24xp"
        android:textColor="@color/coupon_name_color"/>

    <TextView
        android:id="@+id/item_detail_gift_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_detail_gift_image"
        android:layout_alignLeft="@id/item_detail_gift_name"
        android:paddingBottom="@dimen/margin_size_10xp"
        android:textSize="@dimen/front_size_24xp"
        android:textColor="@color/global_text_info_color"
        />

</RelativeLayout>