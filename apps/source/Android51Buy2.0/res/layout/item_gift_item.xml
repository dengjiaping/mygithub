<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/item_detail_gift_image"
        android:layout_width="@dimen/margin_size_140xp"
        android:layout_height="@dimen/margin_size_140xp"
        android:layout_marginLeft="@dimen/margin_size_20xp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/item_detail_gift_name"
        style="@style/global_label"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_20xp"
        android:layout_weight="1"
        android:singleLine="false"
        android:lineSpacingExtra="@dimen/margin_size_5xp"
        android:textSize="@dimen/front_size_24xp" >
    </TextView>

    <TextView
        android:id="@+id/item_detail_gift_count"
        style="@style/global_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_20xp"
        android:layout_marginRight="@dimen/margin_size_20xp"
        android:textColor="#ffb9b9b9"
        android:textSize="@dimen/front_size_24xp" >
    </TextView>

</LinearLayout>