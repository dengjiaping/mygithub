<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/dialog_bg_image"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/margin_size_20xp"
        android:layout_above="@+id/dialog_content_container"
        android:background="@color/user_guide_bg"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/dialog_content_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/user_guide_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dialog_content_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_size_30xp"
            android:layout_marginLeft="@dimen/margin_size_25xp"
            android:layout_marginRight="@dimen/margin_size_25xp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/guide_slot_header" />

        <ImageView
            android:id="@+id/dialog_content_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_size_20xp"
            android:layout_marginLeft="@dimen/margin_size_25xp"
            android:layout_marginRight="@dimen/margin_size_25xp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/guide_loading" />

        <ImageView
            android:id="@+id/dialog_content_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_size_20xp"
            android:layout_marginLeft="@dimen/margin_size_25xp"
            android:layout_marginRight="@dimen/margin_size_25xp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/guide_loading" />

        <ImageView
            android:id="@+id/dialog_content_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_size_40xp"
            android:layout_marginLeft="@dimen/margin_size_25xp"
            android:layout_marginRight="@dimen/margin_size_25xp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/guide_loading" />

    </LinearLayout>
    
    <ImageView
        android:id="@+id/dialog_slot_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/dialog_content_container"
        android:src="@drawable/guide_slot_head"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/dialog_btn_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/dialog_content_container"
        android:layout_alignTop="@+id/dialog_content_container"
        android:layout_margin="@dimen/margin_size_10xp"
        android:background="@drawable/guide_close_btn"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

</RelativeLayout>