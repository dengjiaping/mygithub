<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="132dp"
    android:layout_height="fill_parent"
    android:paddingRight="@dimen/margin_size_20xp"  >

   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="@dimen/margin_size_20xp" >

        <ImageView android:contentDescription="@string/app_name"
            android:id="@+id/event_3_image_1"
            android:layout_width="112dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter" >
        </ImageView>

        <com.icson.lib.ui.AlphaTextView
            android:id="@+id/event_3_price_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_size_10xp"
            android:textColor="#000"
            android:textSize="@dimen/front_size_32xp" />

        <TextView
            android:id="@+id/event_3_title_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_5xp"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="#666"
            android:textSize="@dimen/front_size_26xp" >
        </TextView>
    </LinearLayout>

</LinearLayout>