<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/margin_size_140xp"
    android:background="@drawable/global_white_shadow_click_state"
    android:paddingBottom="@dimen/margin_size_30xp"
    android:paddingTop="@dimen/margin_size_30xp" >

    <ImageView
        android:id="@+id/order_icon"
        android:layout_width="@dimen/margin_size_100xp"
        android:layout_height="@dimen/margin_size_100xp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/order_image"
        android:layout_width="@dimen/margin_size_100xp"
        android:layout_height="@dimen/margin_size_100xp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_size_30xp"
        android:contentDescription="@string/app_name" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_size_30xp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/arrow_right" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/order_image" >

        <TextView
            android:id="@+id/order_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_size_20xp"
            android:layout_weight="1"
            android:textSize="@dimen/font_size_26xp" />

        <TextView
            android:id="@+id/order_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_size_20xp"
            android:textSize="@dimen/font_size_26xp" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:layout_margin="@dimen/margin_size_20xp"
            android:textSize="@dimen/font_size_26xp" />
    </LinearLayout>


</RelativeLayout>