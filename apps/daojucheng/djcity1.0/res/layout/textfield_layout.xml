<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    
    <TextView android:id="@+id/textfield_caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/font_size_30xp"
        android:textColor="@color/global_text_color"
        android:singleLine="true"
        android:layout_weight="1"/>
    
    <RelativeLayout android:id="@+id/textfield_right_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        
        <ImageView android:id="@+id/textfield_drawable_right"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_size_30xp"
            android:layout_centerVertical="true"/>
        
        <TextView android:id="@+id/textfield_sub_caption"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
			android:lineSpacingExtra="@dimen/margin_size_10xp"
			android:textSize="@dimen/font_size_24xp"
        	android:textColor="@color/global_text_info_color"
        	android:visibility="gone"/>
        
        <LinearLayout android:id="@+id/textfield_content_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/textfield_drawable_right"
            android:layout_centerVertical="true">
            
            <TextView android:id="@+id/textfiled_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/global_text_color"
                android:textSize="@dimen/font_size_30xp" />
            
            <TextView android:id="@+id/textfield_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10xp"
                android:lineSpacingExtra="@dimen/margin_size_10xp"
                android:textSize="@dimen/font_size_30xp"
                android:textColor="@color/global_text_color"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>