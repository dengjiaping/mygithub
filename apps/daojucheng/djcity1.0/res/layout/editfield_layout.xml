<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <TextView android:id="@+id/editfield_caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/font_size_30xp"
        android:textColor="@color/global_label"
        android:layout_weight="1"/>
    
    <RelativeLayout android:id="@+id/editfield_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        
        <ImageView android:id="@+id/editfield_button"
	        android:contentDescription="@string/app_name"
	        android:layout_width="@dimen/margin_size_85xp"
	        android:layout_height="@dimen/margin_size_85xp"
	        android:layout_alignParentRight="true"
	        android:scaleType="fitXY"
	        android:src="@drawable/spinner_bg"/>
        
        <EditText android:id="@+id/editfield_content"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/margin_size_85xp"
	        android:layout_toLeftOf="@id/editfield_button"
	        android:background="@drawable/input_bg_with_right"
	        android:inputType="text"
	        android:paddingLeft="@dimen/margin_size_30xp"
	        android:textSize="@dimen/font_size_30xp"
	        android:textColor="#ff444444"
	        android:singleLine="true" />
    </RelativeLayout>
</LinearLayout>