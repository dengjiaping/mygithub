<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff7f7f7" >

    <RelativeLayout
        android:id="@+id/mycity_title"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_size_10xp"
        android:paddingLeft="@dimen/margin_size_10xp"
        android:paddingRight="@dimen/margin_size_10xp"
        android:paddingTop="@dimen/margin_size_10xp" >

        <RelativeLayout
            android:id="@+id/mycity_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/navigationbar_drawable_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/global_transparent_shadow_click_state"
                android:contentDescription="@string/app_name"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/nav_leftOffset"
                android:paddingRight="@dimen/nav_rightOffset"
                android:scaleType="fitCenter"
                android:src="@drawable/ico_mail"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mycity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_size_10xp"
            android:gravity="center_vertical"
            android:text="个人中心"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_36xp" />

        <!--
             <ImageView
            android:id="@+id/mycity_selectgame_button"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/global_transparent_shadow_click_state"
            android:contentDescription="@string/app_name"
            android:paddingLeft="@dimen/nav_rightOffset"
            android:paddingRight="@dimen/nav_rightOffset"
            android:src="@drawable/delete_item_icon" />
        -->
    </RelativeLayout>

    <View
        android:id="@+id/mycity_line1"
        style="@style/global_line2"
        android:layout_below="@id/mycity_title" />

    <RelativeLayout
        android:id="@+id/warehouse_gameinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mycity_line1"
        android:background="@drawable/game_info_bg"
        android:paddingBottom="@dimen/margin_size_20xp"
        android:paddingLeft="@dimen/margin_size_30xp"
        android:paddingRight="@dimen/margin_size_30xp"
        android:paddingTop="@dimen/margin_size_20xp" >

        <ImageView
            android:id="@+id/game_icon"
            android:layout_width="@dimen/margin_size_80xp"
            android:layout_height="@dimen/margin_size_80xp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/dialog_list_button" />

        <TextView
            android:id="@+id/game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_size_50xp"
            android:layout_toRightOf="@id/game_icon"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/font_size_30xp" />
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        style="@style/global_line2"
        android:layout_below="@id/warehouse_gameinfo" />

    <TextView
        android:id="@+id/mycity_select_game"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:background="@drawable/global_white_shadow_click_state"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_size_30xp"
        android:paddingLeft="@dimen/margin_size_30xp"
        android:paddingRight="@dimen/margin_size_30xp"
        android:paddingTop="@dimen/margin_size_30xp"
        android:text="切换游戏与区服"
        android:textSize="@dimen/font_size_30xp" />

    <View
        android:id="@+id/line2"
        style="@style/global_line2"
        android:layout_below="@id/mycity_select_game" />

    <TextView
        android:id="@+id/mycity_role"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:background="@drawable/global_white_shadow_click_state"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_size_30xp"
        android:paddingLeft="@dimen/margin_size_30xp"
        android:paddingRight="@dimen/margin_size_30xp"
        android:paddingTop="@dimen/margin_size_30xp"
        android:text="我的角色"
        android:textSize="@dimen/font_size_30xp" />

    <View
        android:id="@+id/line3"
        style="@style/global_line2"
        android:layout_below="@id/mycity_role" />

    <TextView
        android:id="@+id/mycity_warehouse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:background="@drawable/global_white_shadow_click_state"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_size_30xp"
        android:paddingLeft="@dimen/margin_size_30xp"
        android:paddingRight="@dimen/margin_size_30xp"
        android:paddingTop="@dimen/margin_size_30xp"
        android:text="我的游戏仓库"
        android:textSize="@dimen/font_size_30xp" />

    <View
        android:id="@+id/line4"
        style="@style/global_line2"
        android:layout_below="@id/mycity_warehouse" />

    <TextView
        android:id="@+id/mycity_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line4"
        android:background="@drawable/global_white_shadow_click_state"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_size_30xp"
        android:paddingLeft="@dimen/margin_size_30xp"
        android:paddingRight="@dimen/margin_size_30xp"
        android:paddingTop="@dimen/margin_size_30xp"
        android:text="我的订单"
        android:textSize="@dimen/font_size_30xp" />

    <View
        android:id="@+id/line5"
        style="@style/global_line2"
        android:layout_below="@id/mycity_order" />

    <TextView
        android:id="@+id/mycity_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line5"
        android:background="@drawable/global_white_shadow_click_state"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_size_30xp"
        android:paddingLeft="@dimen/margin_size_30xp"
        android:paddingRight="@dimen/margin_size_30xp"
        android:paddingTop="@dimen/margin_size_30xp"
        android:text="全局设置"
        android:textSize="@dimen/font_size_30xp" />

    <View
        android:id="@+id/line6"
        style="@style/global_line2"
        android:layout_below="@id/mycity_settings" />

    <LinearLayout
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line6"
        android:orientation="horizontal"
        android:background="@drawable/global_white_shadow_click_state"
         >

        <TextView
            android:id="@+id/message_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_size_30xp"
            android:paddingLeft="@dimen/margin_size_30xp"
            android:paddingRight="@dimen/margin_size_30xp"
            android:paddingTop="@dimen/margin_size_30xp"
            android:text="@string/message_center"
            android:textSize="@dimen/font_size_30xp" />

        <TextView
            android:id="@+id/message_num"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/message_num"
            android:textColor="@color/red"
            android:visibility="visible" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_size_30xp"
            android:paddingLeft="@dimen/margin_size_30xp"
            android:paddingRight="@dimen/margin_size_30xp"
            android:paddingTop="@dimen/margin_size_30xp"
            android:drawableRight="@drawable/arrow_right"/>
    </LinearLayout>

    <View
        android:id="@+id/line7"
        style="@style/global_line2"
        android:layout_below="@id/message" />

    <Button
        android:id="@+id/button_logout"
        style="@style/button_confirm_bg_white"
        android:layout_below="@id/line7"
        android:layout_margin="@dimen/margin_size_30xp"
        android:text="退出当前帐号" />

</RelativeLayout>